<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissible fade show alert-<%= message.type %>"
                role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert"
                aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <table class="table table-stripped text-center my-5">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr class="align-middle">
                            <td><%= user._id %></td>
                            <td><img src="<%= user.image %>" width="50" class="img-thumbnail"
                                alt=""></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td>
                                <a href="/edit/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                <a href="/delete/<%= user._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>



<%- include('layout/footer') %>
